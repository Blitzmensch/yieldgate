{
  "name": "@yieldgate/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "next": "^12.2.2"
      }
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint:all": "turbo run lint",
    "lint": "prettier . --check",
    "lint:fix:all": "turbo run lint:fix",
    "lint:fix": "prettier . --write",
    "dev:frontend": "pnpm --filter frontend dev",
    "start:frontend": "pnpm --filter frontend start",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "next": "^12.2.2",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "1.0.0-dev.23",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4"
  }
}
