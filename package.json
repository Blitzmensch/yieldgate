{
  "name": "yieldgate",
  "version": "0.0.2",
  "license": "MIT",
  "private": true,
  "scripts": {
    "predev": "yarn hardhat:clean && yarn hardhat:compile",
    "prebuild": "yarn hardhat:clean && yarn hardhat:compile",
    "dev": "yarn frontend:dev",
    "build": "yarn frontend:build",
    "frontend:dev": "yarn workspace @yieldgate/frontend dev",
    "frontend:build": "yarn workspace @yieldgate/frontend build",
    "frontend:start": "yarn workspace @yieldgate/frontend start",
    "hardhat:clean": "yarn workspace @yieldgate/hardhat clean",
    "hardhat:compile": "yarn workspace @yieldgate/hardhat compile",
    "hardhat:typechain": "yarn workspace @yieldgate/hardhat typechain",
    "hardhat:chain": "yarn workspace @yieldgate/hardhat chain",
    "hardhat:deploy": "yarn workspace @yieldgate/hardhat deploy"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}