{
  "name": "@yieldgate/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
      }
    }
  },
  "scripts": {
    "predev": "pnpm hardhat:clean && pnpm hardhat:compile",
    "dev": "pnpm frontend:dev",
    "build": "pnpm hardhat:build && pnpm frontend:build",
    "start": "pnpm frontend:start",
    "frontend:dev": "pnpm --filter frontend dev",
    "frontend:build": "pnpm --filter frontend build",
    "frontend:start": "pnpm --filter frontend start",
    "hardhat:build": "pnpm hardhat:clean && pnpm hardhat:compile",
    "hardhat:clean": "pnpm --filter hardhat clean",
    "hardhat:compile": "pnpm --filter hardhat compile",
    "format": "pnpm --filter frontend format && pnpm --filter hardhat format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  }
}